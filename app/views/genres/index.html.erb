<div class="page-header">
  <h1>
    Genres
    <a href="/genres/new" class="btn btn-lg btn-success">New Genre</a>
  </h1>
</div>

<ul class="list-group">
  <% @genres.order(title: :asc).each do |genre| %>
  <li class="list-group-item">
    <span class="badge"><%= genre.books.count %></span>
    <a href="/genres/<%= genre.id %>" class="">
      <%= genre.title %>
    </a>
  </li>
  <% end %>
</ul>
