<div class="page-header">
  <h1>
    Books
    <a href="/books/new" class="btn btn-lg btn-success">New Book</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Image</th>
        <th>Author</th>
        <th>Blurb</th>
        <th>Genre</th>

      </tr>

      <% @books.each do |book| %>
      <tr >
        <td><a href="/books/<%= book.id %>" style="text-decoration:none"><%= book.title %></a></td>
        <td><a href="/books/<%= book.id %>"><img src = <%= book.image %> width ="100"></a></td>
        <td><a href="/authors/<%= book.author.id %>" style="text-decoration:none"><%= book.author.name %></a></td>
        <td ><%= truncate(book.blurb, length: 250, omission: '.......'){link_to "(continue)", "/books/#{book.id}"}  %></td>
        <td>
          <% book.genres.each do |bgenre| %>
          <ul class = "list-group">
            <li class = "list-group-item">
              <a href="/genres/<%= bgenre.id %>" style="text-decoration:none"><%= bgenre.title %></a>
            </li>
          </ul>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
