<div class="page-header">
  <h1>
    Books
    <a href="/books/new" class="btn btn-lg btn-success">New Book</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Author</th>
        <th>User</th>
        <th>Blurb</th>
        <th>Title</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>

      <% @books.each do |book| %>
      <tr>
        <td><%= book.author_id %></td>
        <td><%= book.user_id %></td>
        <td><%= book.blurb %></td>
        <td><%= book.title %></td>
        <td><%= book.image %></td>
        <td>
          <a href="/books/<%= book.id %>" class="btn btn-primary">Show</a>
          <a href="/books/<%= book.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_book/<%= book.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
