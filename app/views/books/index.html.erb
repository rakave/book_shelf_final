<div class="page-header">
  <h1>
    Books
    <a href="/books/new" class="btn btn-lg btn-success">New Book</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Image</th>
        <th>Author</th>
        <th>Blurb</th>
        <th>Genre</th>

      </tr>

      <% @books.each do |book| %>
      <tr>
        <td><a href="/books/<%= book.id %>"><%= book.title %></a></td>
        <td><a href="/books/<%= book.id %>"><img src = <%= book.image %> width ="100"></a></td>
        <td><%= book.author.name %></td>
        <td><%= book.blurb %></td>
        <td>
          <% book.genres.each do |bgenre| %>
          <ul>
            <li><a href="/genres/<%= bgenre.id %>"><%= bgenre.title %></a></li>
          </ul>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
